local deftest = require("deftest.deftest")
local log = require("modules.log")

local color_spec = require("test.color_spec")
local csv_spec = require("test.csv_spec")
local i18n_spec = require("test.i18n_spec")
local log_spec = require("test.log_spec")
local settings_spec = require("test.settings_spec")
local sticky_spec = require("test.sticky_spec")
local utf8_spec = require("test.utf8_spec")
local utils_spec = require("test.utils_spec")

function init(self)
  log.init()
  log.set_print(false)

  deftest.add(color_spec)
  deftest.add(csv_spec)
  deftest.add(i18n_spec)
  deftest.add(log_spec)
  deftest.add(settings_spec)
  deftest.add(sticky_spec)
  deftest.add(utf8_spec)
  deftest.add(utils_spec)

  deftest.run({ coverage = { enabled = true } })
end
